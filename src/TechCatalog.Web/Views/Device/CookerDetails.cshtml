@model CookerDetailViewModel

@{
    ViewData["Title"] = "Cooker";
}

<img src="@Model.Image" width="200" class="mx-auto d-block" />
<h1 class="text-center display-4">@Model.Brand @Model.DeviceModel</h1>
<br />
<table class="table table-hover container">
    <tbody>
        <tr>
            <td>Weight</td>
            <td>@Model.Weight kg</td>
        </tr>
        <tr>
            <td>Color</td>
            <td>@Model.Color</td>
        </tr>
        <tr>
            <td>Warranty</td>
            <td>@Model.Warranty months</td>
        </tr>
        <tr>
            <td>Energy Class</td>
            <td>@Model.EnergyClass</td>
        </tr>
        <tr>
            <td>Number Of Functions</td>
            <td>@Model.NumberOfFunctions</td>
        </tr>
        <tr>
            <td>Volume</td>
            <td>@Model.Volume L</td>
        </tr>
        <tr>
            <td>Timer</td>
            @if (Model.IsTimer == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Programmer</td>
            @if (Model.IsProgrammer == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Catalic Panel</td>
            @if (Model.IsCatalicPanel == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
    </tbody>
</table>
