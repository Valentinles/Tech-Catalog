@model AirConditionerDetailViewModel

@{
    ViewData["Title"] = "Air Conditioner";
}

<img src="@Model.Image" width="200" class="mx-auto d-block" />
<h1 class="text-center display-4">@Model.Brand @Model.DeviceModel</h1>
<br />
<table class="table table-hover container">
    <tbody>
        <tr>
            <td>Weight</td>
            <td>@Model.Weight kg</td>
        </tr>
        <tr>
            <td>Color</td>
            <td>@Model.Color</td>
        </tr>
        <tr>
            <td>Warranty</td>
            <td>@Model.Warranty months</td>
        </tr>
        <tr>
            <td>Capacity Cooling</td>
            <td>@Model.CapacityCooling kW</td>
        </tr>
        <tr>
            <td>Capacity Heating</td>
            <td>@Model.CapacityHeating kW</td>
        </tr>
        <tr>
            <td>Power Consumption Cooling</td>
            <td>@Model.PowerConsumptionCooling kW</td>
        </tr>
        <tr>
            <td>Power Consumption Heating</td>
            <td>@Model.PowerConsumptionHeating kW</td>
        </tr>
        <tr>
            <td>Inverter Motor</td>
            @if (Model.IsInverterMotor == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Energy Class Cooling</td>
            <td>@Model.EnergyClassCooling</td>
        </tr>
        <tr>
            <td>Energy Class Heating</td>
            <td>@Model.EnergyClassHeating</td>
        </tr>
        <tr>
            <td>Remote Control</td>
            @if (Model.IsRemoteControl == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Noise Level Inside Unit</td>
            <td>@Model.NoiseLevelInsideUnit dB</td>
        </tr>
        <tr>
            <td>Noise Level Outside Unit</td>
            <td>@Model.NoiseLevelOutsideUnit dB</td>
        </tr>
    </tbody>
</table>
