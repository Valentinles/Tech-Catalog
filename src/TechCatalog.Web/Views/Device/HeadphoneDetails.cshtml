@model HeadphoneDetailViewModel

@{
    ViewData["Title"] = "Headphone";
}

<img src="@Model.Image" width="200" class="mx-auto d-block" />
<h1 class="text-center display-4">@Model.Brand @Model.DeviceModel</h1>
<br />
<table class="table table-hover container">
    <tbody>
        <tr>
            <td>Weight</td>
            <td>@Model.Weight kg</td>
        </tr>
        <tr>
            <td>Color</td>
            <td>@Model.Color</td>
        </tr>
        <tr>
            <td>Warranty</td>
            <td>@Model.Warranty months</td>
        </tr>
        <tr>
            <td>Type</td>
            <td>@Model.Type</td>
        </tr>
        <tr>
            <td>FrequencyRange </td>
            <td>@Model.FrequencyRange </td>
        </tr>
        <tr>
            <td>Impedance</td>
            <td>@Model.Impedance Ω</td>
        </tr>
        <tr>
            <td>Microphone</td>
            @if (Model.IsMicrophone == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Sound Control</td>
            @if (Model.IsSoundControl == true)
            {
                <td><i class="fas fa-check-circle btn-outline-success"></i></td>
            }
            else
            {
                <td><i class="fas fa-times btn-outline-danger"></i></td>
            }
        </tr>
        <tr>
            <td>Interface</td>
            <td>@Model.Interface</td>
        </tr>
        <tr>
            <td>Cable Length</td>
            <td>@Model.CableLength m</td>
        </tr>
    </tbody>
</table>

